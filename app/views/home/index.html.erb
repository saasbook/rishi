<script src="https://maps.googleapis.com/maps/api/js?key=<%=@api_key%>&callback=initMap"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="wardsLst" style="width:150px;">
  <% @wards.each do |ward| %>
  <ul>
    <li class="has_cmt"><%= ward.name %></li>
    <ul id="cmt">
      <li>Water</li>
      <li>Education</li>
    </ul>
  </ul>
  <% end %>
</div>


<div class="map_block" style="width:1250px; margin:0 auto;">
  <div id="map" style='width: 1280px; height: 800px;'></div>
</div>

 
<script type="text/javascript">
var mapOptions = {
  center: new google.maps.LatLng(31.1048,77.1734),
  zoom: 7
};

handler = Gmaps.build('Google');
handler.buildMap({ provider: mapOptions, internal: {id: 'map'}}, function(){
  handler.addMarkers(<%=raw @marker_hash.to_json %>);
  handler.addPolygons(<%=raw @regions.to_json%>,{strokeColor: '#FF0000', fillColor: '#FF0000'});
  handler.fitMapToBounds();
});
</script>